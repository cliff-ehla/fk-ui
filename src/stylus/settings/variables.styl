/* font */
$page-font = 'Roboto', sans-serif

$header-font = 'Roboto', sans-serif

$line-height-root = 1.75

$font-size-root = 16px

/* breakpoints */
$screen-lg = 954px
$lg = $screen-lg

$screen-md = 800px
$md = $screen-md

$screen-sm = 600px
$sm = $screen-sm

$breakpoints = {
  xs: 0
  sm: $screen-sm
  md: $screen-md
  lg: $screen-lg
}

/* shadow and radius */
$transition = 0.3s cubic-bezier(.25,.8,.50,1)

$box-shadow-1 = 0 4px 20px -4px rgba(0,0,0,.15)

$box-shadow-2 = 0 4px 20px -4px rgba(0,0,0,.25)

$box-shadow-3 = 0 4px 20px -4px rgba(0,0,0,.35)

$box-shadow = $box-shadow-2

$border-radius = 2px

/* element size */
$el-padding-x = 16px

$el-height-1 = 30px

$el-height-2 = 42px

$el-height-3 = 50px

$el-height = $el-height-2

