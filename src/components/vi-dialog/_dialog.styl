.vi-dialog
	box-shadow $box-shadow-2
	border-radius: $border-radius
	margin: 60px 24px
	overflow-y: auto
	pointer-events: auto
	transition: .3s ease-in-out
	width: 100%
	z-index: inherit
	background white
	position relative

	> .vi-button.vi-button--icon:first-child
		position absolute
		top 10px
		right 10px

	&__activator
		input[readonly]
			cursor: pointer !important

	&__content
		align-items: flex-start
		display: flex
		height: 100%
		justify-content: center
		left: 0
		pointer-events: none
		position: fixed
		top: 0
		transition: .3s ease-in-out
		width: 100%
		z-index: 6
		outline: none

		@media screen and ( min-height: 750px) {
			align-items center
		}

	&:not(.v-dialog--fullscreen)
		max-height: 90%

	&__container
		display: inline-block
		vertical-align: middle

	&--fullscreen
		margin 0
		height 100%
		position fixed
		overflow-y: auto
		top: 0
		left 0

		> .v-card
			min-height 100%
			min-width 100%
			margin 0 !important
			padding 0 !important

	&__header
		display flex
		align-items center
		padding 12px 24px
		font-size 18px
		color $blue-text
		font-weight 600
		border-bottom 1px solid $border-color

	&__footer
		position relative
		z-index: 1;
		display flex
		align-items center
		justify-content center
		min-height 40px
		padding 0 24px 24px 24px

		.vi-dialog--scrollable &
			box-shadow 0px -8px 10px -2px rgba(0,0,0,0.04)
			padding-top 16px
			padding-bottom 16px

		> .vi-button:not(:first-child)
			margin-left 10px

	&__body
		padding 24px

		.vi-dialog--scrollable &
			max-height 400px
			overflow-y auto
			-webkit-overflow-scrolling touch

.vi-dialog
	&__title
		font-size 20px
		line-height 1.2
		color $font-color-3
		font-weight bold
		text-transform uppercase

		&:not(:last-child)
			margin-bottom 24px
